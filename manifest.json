{
  "manifest_version": 2,
  "name": "HTML5 Video previews",
  "version": "2.0",
  "content_scripts": [
    {
	      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
   "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["tabs","activeTab"],
  "browser_action": {
    "default_icon": "ct.png",
    "default_popup": "index.html",
    "default_title": "Scan for videos/audio streams"
  },
  	"icons": {
        "128": "ct.png"
    }
}

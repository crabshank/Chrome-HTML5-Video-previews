{
  "manifest_version": 3,
  "name": "HTML5 Video previews page",
  "version": "2021.6",
    "content_scripts": [
    {
	      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js","port_connect.js"]
    }
  ],
  "permissions": ["tabs","activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
	"default_icon": "ct.png",
	"default_popup": "index.html"
	},
  	"icons": {
        "128": "ct.png"
    }
}